<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button android:id="@+id/btnBack" android:text="Volver"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <TextView android:text="Registro de cliente" android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etNombre" android:hint="Nombres"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etTelefono" android:hint="Teléfono" android:inputType="phone"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etEmail" android:hint="Email" android:inputType="textEmailAddress"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etPassword" android:hint="Contraseña" android:inputType="textPassword"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnGuardar" android:text="Crear cuenta"
        android:layout_marginTop="16dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
