<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material 3 + NoActionBar -->
    <style name="Theme.AppPromos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores base (usa tus Figma) -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorOnSurface">@color/brand_on_surface</item>
        <item name="colorOutline">@color/brand_outline</item>

        <!-- Tipografía (opcional: apunta a res/font/tu_fuente.xml) -->
        <!-- <item name="fontFamily">@font/poppins</item> -->

        <!-- Botones redondeados -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Primary</item>
        <!-- Campos de texto redondeados -->
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <!-- Botón primario -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <!-- TextInputLayout con estilo -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

</resources>

